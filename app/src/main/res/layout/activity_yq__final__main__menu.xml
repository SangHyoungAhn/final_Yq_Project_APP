<?xml version="1.0" encoding="UTF-8" ?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

        <LinearLayout
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 1번째 칸 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/Stu_Info"
                    android:drawableBottom="@drawable/id_card"
                    android:textColor="#616161"
                    android:text="MY PAGE"
                    android:textSize="20dp"
                    android:layout_marginTop="60dp"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="@drawable/roundshape"
                     />

                <Button


                    android:id="@+id/qr_Scanner"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="5dp"
                    android:drawableBottom="@drawable/barcode_scanner2"

                    android:text="QR Scanner"
                    android:textColor="#616161"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:textSize="20dp"
                    android:background="@drawable/roundshape"/>

            </LinearLayout>

            <!-- 2번째 칸 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/Menu"
                    android:drawableBottom="@drawable/menu"
                    android:text="메 뉴"
                    android:textSize="20dp"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape" />
                <Button
                    android:id="@+id/WeekMenu"
                    android:drawableBottom="@drawable/weekly_calendar"
                    android:text="주간메뉴"
                    android:textSize="20dp"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape"/>

            </LinearLayout>

            <!-- 3번째 칸 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/Usage"
                    android:text="사용 내역"
                    android:textSize="20dp"
                    android:drawableBottom="@drawable/clipboard"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape" />

                <Button
                    android:id="@+id/Recharge"
                    android:text="충 전"
                    android:drawableBottom="@drawable/credit_card"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:shadowColor="#BDBDBDBD"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape" />

            </LinearLayout>

        </LinearLayout>

    <include
        layout="@layout/app_bar_yq__final__main__menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_yq__final__main__menu"
        app:menu="@menu/activity_yq__final__main__menu_drawer" />

</android.support.v4.widget.DrawerLayout>
