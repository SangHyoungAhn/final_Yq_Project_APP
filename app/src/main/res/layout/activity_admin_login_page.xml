<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comdrivemy_drive.google.httpsdrive.yongq_project.LoginPageActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="620dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="vertical"
            android:background="#FFFFFFFF">



            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="YQ"
                android:textSize="120dp"
                android:shadowColor="#BDBDBDBD"
                android:shadowDx="20"
                android:shadowDy="20"
                android:shadowRadius="1.5"
                android:textColor="#0091EA"
                android:textStyle="bold"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFFFF">

            <EditText

                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="ADMIN ID"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#616161"
                android:textColorHint="#616161"
                android:id="@+id/adminIdText"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginTop="40dp"
                />

            <EditText
                android:inputType="textPassword"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#616161"
                android:textColorHint="#616161"
                android:id="@+id/adminPasswordText"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:layout_marginTop="20dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:background="#FFFFFFFF">

                <Button
                    android:id= "@+id/adminLoginButton"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape"
                    android:text="LOGIN"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="left"/>

                <Button
                    android:id= "@+id/studentButton"
                    android:orientation="horizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#616161"
                    android:background="@drawable/roundshape"
                    android:text="STUDENT"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="right"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
