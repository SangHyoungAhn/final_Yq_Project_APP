<?xml version="1.0" encoding="UTF-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comdrivemy_drive.google.httpsdrive.yongq_project.Student_Show_Recharge_Page">

    <LinearLayout

        android:id="@+id/stu_show_recharge_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button

                android:id="@+id/stu_ShowRcgWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/roundshape"
                android:gravity="center"
                android:text="1주일" />

            <Button

                android:id="@+id/stu_ShowRcgMth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundshape"
                android:gravity="center"
                android:text="1개월" />

            <Button

                android:id="@+id/stu_ShowRcgThMth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundshape"
                android:gravity="center"
                android:text="3개월" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
