<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comdrivemy_drive.google.httpsdrive.yongq_project.Admin_Calculate_Page"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="날 짜"
                android:textSize="20dp"

                />

            <EditText

                android:id="@+id/totDateText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint=" ex)2017-07"
                android:imeOptions="actionNext"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="장 소"
                android:textSize="20dp"

                />

            <EditText

                android:id="@+id/totChainText"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:hint=" ex)인성관"
                android:imeOptions="actionDone"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/adminTotSearch"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="140dp"
                android:background="@drawable/roundshape"
                android:text="조회" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vie22w"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:text="매출: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adminTotText"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="13dp"
            android:textSize="17dp" />

    </LinearLayout>

    <View
        android:id="@+id/vie2w"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <TableLayout
            android:id="@+id/awardTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/removeRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#616161"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="#0091EA"
                    android:gravity="center_horizontal"
                    android:text="메뉴명 "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#0091EA"
                    android:gravity="center_horizontal"
                    android:text="구매 횟수"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>


    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000" />


</LinearLayout>